extends ../layouts/common

block content
	h1 Products

	.d-flex.justify-content-between
		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input(type="text", name="page", class="form-control")
			button(class="btn btn-primary ml-2") Search	

	div(style='display: grid; grid-template-columns: auto auto auto auto; grid-column-gap: 20px; grid-row-gap: 20px')
		each product in products
			.card(style='width: 16rem;')
				img.card-img-top(src=product.image)
				.card-body         					
					h5.card-title= product.name
					p.card-text= product.description
					a.btn.btn-primary(href='/cart/add/' + product.id) Add to Car

block numberCart
	if session	
		span (
		span= session.number 
		span )
	else 
		span (0)







